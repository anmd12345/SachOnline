<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Html.Action("HeaderPartial", "SachOnline")
</head>

<body>
    <nav class="navbar navbar-inverse">
        <div class="container">
            @Html.Action("NavPartial", "SachOnline")
        </div>
    </nav>


    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @Html.Action("SliderPartial", "SachOnline")
            </div>
        </div>
        <hr>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @Html.Action("ChuDePartial", "SachOnline")
                <br>
                @Html.Action("NhaXuatBanPartial", "SachOnline")


            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @RenderBody()
            </div>
        </div>
        <hr>
    </div>
    <div class="container">
        @Html.Action("SachBanNhieuPartial", "SachOnline")
        <hr>
    </div>
    @Html.Action("FooterPartial", "SachOnline")
</body>
</html>
