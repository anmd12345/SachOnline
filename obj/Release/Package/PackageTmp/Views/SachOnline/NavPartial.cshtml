@{
    var TaiKhoan = Session["TaiKhoan"] as SachOnline.Models.KHACHHANG;
}

<div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar1" aria-expanded="false">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#">SachOnline</a>
</div>

<!-- Collect the nav links, forms, and other content for toggling -->
<div class="collapse navbar-collapse" id="navbar1">
    <ul class="nav navbar-nav">
        <li class="active"><a href="#">TRANG CHỦ</a> </li>
        <li><a href="#">GIỚI THIỆU</a> </li>
        <li><a href="#">LIÊN HỆ</a> </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
        @if (Session["TaiKhoan"] == null)
        {
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">Người dùng<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("DangKy", "User")"><span class="glyphicon glyphicon-user"></span> Đăng ký</a> </li>
                    <li role="separator" class="divider"></li>
                    <li>
                        <a href="@Url.Action("DangNhap","User", new { url = Request.Url.ToString() })">
                            <span class="glyphicon glyphicon-log-in"></span> Dang nhap
                        </a>
                    </li>
                </ul>
            </li>
        }
        else
        {
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">Người dùng<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="#"><span class="glyphicon glyphicon-user">Xin chào, </span>@TaiKhoan.HoTen</a> </li>
                    <li role="separator" class="divider"></li>
                </ul>
            </li>
        }

        <li>@Html.Action("GioHangPartial", "GioHang")</li>
    </ul>

    <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Tìm kiếm">
        </div>
        <button type="submit" class="btn btn-default">Tìm</button>
    </form>

</div>
