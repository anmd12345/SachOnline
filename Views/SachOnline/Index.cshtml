@model IEnumerable<SachOnline.Models.SACH>
@{
    ViewBag.Title = "TRANG CHỦ";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<style type="text/css">
    .imgbook {
        transition: all 1s ease-in;
        width: 400px;
    }

        .imgbook:hover {
            transform: scale(0.9);
            cursor: pointer;
        }
</style>
<div class="row text-center">
    <h2 class="text-center">SÁCH MỚI</h2>
    <hr>
    <table>
        <tr>
            <div class="row text-center">
                @foreach (var sach in Model)
                {
                    <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
                        <div class="thumbnail">
                            <img src="/Statics/Images/@sach.AnhBia" alt="Thumbnail Image 1" class="img-responsive img-rounded imgbook ">
                            <div class="caption">
                                <h3>
                                    <a href="@Url.Action("ChiTietSach","SachOnline", new { id = sach.MaSach})">@sach.TenSach</a>
                                </h3>
                                <p>
                                    <a href="@Url.Action("ThemGioHang","GioHang", new { ms = sach.MaSach, url =
Request.Url.ToString() })" class="btn btn-warning" role="button"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Add to Cart</a>
                                </p>
                            </div>
                        </div>
                    </div>
                }
                <hr />
            </div>
        </tr>
        <tr>
            <div class="row text-center">
                <nav class="text-center">
                    <!-- Add class .pagination-lg for larger blocks or .pagination-sm for smaller blocks-->
                    <ul class="pagination">
                        <li> <a href="#" aria-label="Previous"> <span aria-hidden="true">&laquo;</span> </a> </li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li class="disabled"><a href="#">5</a></li>
                        <li> <a href="#" aria-label="Next"> <span aria-hidden="true">&raquo;</span> </a> </li>
                    </ul>
                </nav>
            </div>
        </tr>
    </table>

